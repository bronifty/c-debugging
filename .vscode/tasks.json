{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++",
      "type": "shell",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++17", // Specify C++ standard
        "-g", // Generate debug information
        "${file}", // Current file
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}" // Output executable
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build task for compiling C++ files using g++."
    }
  ]
}
